<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DesktopApplication.MainPage">
    <ScrollView>
        <StackLayout>
            <Button Clicked="CreateTestNavigate" Margin="10" HeightRequest="40" WidthRequest="200" Text="Create Test" VerticalOptions="Start" HorizontalOptions="Start"></Button>
            <Border x:Name="borderForTests" Stroke="BlueViolet" HorizontalOptions="Center" WidthRequest="970" HeightRequest="580">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12"></RoundRectangle>
                </Border.StrokeShape>
                <ScrollView x:Name="scrolForTests">
                    <VerticalStackLayout x:Name="stackForTests">
                        
                    </VerticalStackLayout>
                </ScrollView>
            </Border>
        </StackLayout>
    </ScrollView>
</ContentPage>
